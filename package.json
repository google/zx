  },
  "dependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/minimist": "^1.2.5",
    "@types/node": "^18.19.112",
    "@types/ps-tree": "^1.1.6",
    "@types/which": "^2.0.1",
    "chalk": "^5.4.1",
    "fs-extra": "^10.1.0",
    "globby": "^13.1.1",
    "ignore": "^7.0.5",
    "minimist": "^1.2.8",
    "node-fetch": "^3.3.2",
    "ps-tree": "^1.2.0",
    "which": "^2.0.2",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "c8": "^7.11.3",
    "get-port": "^7.1.0",
    "prettier": "^2.6.2",
    "typescript": "^5.8.3",
    "uvu": "^0.5.6"
  },
  "publishConfig": {
    "registry": "https://wombat-dressing-room.appspot.com"
  },
  "files": [
    "build",
