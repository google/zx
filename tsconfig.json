{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
