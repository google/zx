{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "strict": true,
    "outDir": "./build",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "types": ["node", "fs-extra"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/globals.ts"]
}
